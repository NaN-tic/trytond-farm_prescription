<form>
    <label name="name"/>
    <field name="name" colspan="3"/>
    <newline/>
    <label name="product"/>
    <field name="product"/>
    <group id="quantity_unit" colspan="2" col="4" xfill="0" xexpand="0">
        <label name="quantity"/>
        <field name="quantity"/>
        <label name="unit"/>
        <field name="unit"/>
    </group>
    <notebook>
        <page string="General" id="general">
            <label name="afection"/>
            <field name="afection"/>
            <label name="expiry_period"/>
            <field name="expiry_period"/>
            <label name="dosage"/>
            <field name="dosage"/>
            <label name="waiting_period"/>
            <field name="waiting_period"/>
            <field name="lines" colspan="4"/>
        </page>
        <page name="note">
            <field name="note" colspan="4"/>
        </page>
    </notebook>
</form>
