<form>
    <label name="reference"/>
    <field name="reference"/>
    <label name="date"/>
    <field name="date"/>
    <label name="farm"/>
    <field name="farm"/>
    <label name="delivery_date"/>
    <field name="delivery_date"/>
    <newline/>
    <label name="template"/>
    <field name="template"/>
    <label name="product"/>
    <field name="product"/>
    <group id="quantity_unit" colspan="2" col="4">
        <label name="quantity"/>
        <field name="quantity"/>
        <label name="unit"/>
        <field name="unit"/>
    </group>
    <button name="set_template" string="Set Template" icon="tryton-list-add"
        colspan="2"/>
    <label name="veterinarian"/>
    <field name="veterinarian"/>
    <label name="lot"/>
    <field name="lot"/>
    <notebook>
        <page string="General" id="general">
            <label name="afection"/>
            <field name="afection"/>
            <label name="expiry_period"/>
            <field name="expiry_period"/>
            <label name="dosage"/>
            <field name="dosage"/>
            <label name="waiting_period"/>
            <field name="waiting_period"/>
            <field name="lines" colspan="4"/>
        </page>
        <page string="Target Animals" id="target_animals">
            <label name="number_of_animals"/>
            <field name="number_of_animals"/>
            <newline/>
            <field name="animals" colspan="2"/>
            <field name="animal_groups" colspan="2"/>
        </page>
        <page name="note">
            <field name="note" colspan="4"/>
        </page>
    </notebook>
    <group id="buttons" colspan="4">
        <label name="state"/>
        <field name="state"/>
        <button name="confirm" string="Confirm" icon="tryton-go-next"/>
        <button name="done" string="Done" icon="tryton-go-next"/>
    </group>
</form>
